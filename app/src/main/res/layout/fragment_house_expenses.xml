<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".house.expenses.houseExpensesFragment">

    <!--    TODO fix fragment being overridden by bottom bar-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expensesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightButtonColor"
        android:padding="4dp" />

    <com.example.roomie.MovableFloatingActionButton
        android:id="@+id/expensesFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_action_add"
        app:backgroundTint="@color/buttonColor" />

    <include
        layout="@layout/balance_bubble"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_alignBottom="@id/expensesFab"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/expensesFab" />
</RelativeLayout>