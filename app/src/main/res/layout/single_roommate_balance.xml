<?xml version="1.0" encoding="utf-8"?><!--TODO profile pic-->
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="80dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentStart="true"
    android:layout_gravity="start"
    android:background="@drawable/one_chore_bg">

    <TextView
        android:id="@+id/singleUsernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/singleUserBalanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/singleUsernameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>