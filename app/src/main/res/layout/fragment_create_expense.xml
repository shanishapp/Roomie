<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".house.expenses.NewExpenseFragment">


    <FrameLayout
        android:id="@+id/expense_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/costTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/cost"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/expenseTypeSpinner"
        app:layout_constraintStart_toStartOf="@+id/expenseTypeSpinner"
        app:layout_constraintTop_toTopOf="parent" />

    <me.abhinay.input.CurrencyEditText
        android:id="@+id/expenseCostEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/enter_expense_price"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costTextView" />


    <TextView
        android:id="@+id/expenseTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/expenseType"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/expenseTypeSpinner"
        app:layout_constraintStart_toStartOf="@+id/expenseTypeSpinner"
        app:layout_constraintTop_toBottomOf="@id/expenseCostEditText" />


    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/expenseTypeSpinner"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"


        android:layout_marginEnd="20dp"
        android:background="@drawable/input_bg"
        android:padding="10dp"
        android:textColor="#000000"

        android:textColorHint="@color/colorAccent"
        android:textSize="14.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/expenseTypeTextView"


        app:spinner_arrow_animate="true"
        app:spinner_arrow_gravity="start"
        app:spinner_arrow_padding="8dp"

        app:spinner_arrow_tint="@color/black"
        app:spinner_divider_color="@color/gray_holo_light"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.4dp"

        app:spinner_item_array="@array/default_titles"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/white"
        app:spinner_popup_elevation="14dp" />


    <EditText
        android:id="@+id/customExpenseTypeEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:hint="@string/enter_custom_expense"
        android:visibility="invisible"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseTypeSpinner" />

    <TextView
        android:id="@+id/expenseDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/description_1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customExpenseTypeEditText" />

    <EditText
        android:id="@+id/expenseDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseDescriptionTextView" />

    <TextView
        android:id="@+id/expensePayerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/paid_for_by"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseDescriptionEditText" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/expensePayerSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp"


        android:background="@drawable/input_bg"
        android:padding="10dp"
        android:textColor="#000000"


        android:textColorHint="@color/colorAccent"
        android:textSize="14.5sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/expensePayerTextView"
        app:spinner_arrow_animate="true"
        app:spinner_arrow_gravity="start"

        app:spinner_arrow_padding="8dp"
        app:spinner_arrow_tint="@color/black"
        app:spinner_divider_color="@color/gray_holo_light"
        app:spinner_divider_show="true"

        app:spinner_divider_size="0.4dp"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_background="@color/white"
        app:spinner_popup_elevation="14dp" />


    <Button
        android:id="@+id/createExpenseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_bg"
        android:text="@string/create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expensePayerSpinner" />


</androidx.constraintlayout.widget.ConstraintLayout>