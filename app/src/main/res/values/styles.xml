<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryDark">@color/buttonColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_background
        </item>
    </style>

    <style name="JoinHouseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryDark">@color/buttonColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChooseHouseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryDark">@color/buttonColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SignInTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryDark">@color/buttonColor</item>
        <item name="colorAccent">@color/buttonColor</item>
        <item name="colorButtonNormal">@color/buttonColor</item>
        <item name="colorControlNormal">@color/buttonColor</item>
        <item name="colorControlActivated">@color/buttonColor</item>
        <item name="colorControlHighlight">@color/buttonColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.Roomie.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <!--<item name="android:popupBackground">#FFF</item>-->
    </style>

    <style name="MainTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserProfileStatItemWrapper">
        <item name="android:background">@drawable/user_profile_stat_item_wrapper_bg</item>
        <item name="android:paddingVertical">22dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">98dp</item>
    </style>

    <style name="UserProfileStatValue">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/buttonColorDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserProfileStatTitle">
        <item name="android:textColor">@color/buttonColorDark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HouseSettingsSectionTitle">
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/buttonColorDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HouseSettingsSectionItemWrapper">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="HouseSettingsSectionItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/options</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"filter"</item>
    </style>

    <style name="inputText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="input">
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>


</resources>